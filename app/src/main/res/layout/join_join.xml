<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#fff"
            android:baselineAligned="false"
            android:gravity="center_horizontal|center"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/back"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:background="#fff"
            android:baselineAligned="false"
            android:gravity="center_horizontal|center"
            android:text="←"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </FrameLayout>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        app:srcCompat="@drawable/login_2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="326dp"
        android:layout_height="97dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#eeeeee"
        android:gravity="center_horizontal|center"
        android:text="개인정보를 입력하는 절차입니다"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="normal"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.235" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@android:dimen/app_icon_size"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="415dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/id"
                android:layout_width="238dp"
                android:layout_height="45dp"
                android:gravity="left|center"
                android:hint="아이디를 입력해주세요"
                tools:ignore="InvalidId,MissingConstraints"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="289dp" />

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="중복 확인"
                tools:layout_editor_absoluteX="289dp"
                tools:layout_editor_absoluteY="289dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/passText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="415dp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="237dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="비밀번호를 입력해주세요"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/passCheakText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="396dp" />

        <EditText
            android:id="@+id/passCheak"
            android:layout_width="237dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="비밀번호를 재입력해주세요"
            android:inputType="textPassword"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="415dp" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="415dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="238dp"
            android:layout_height="45dp"
            android:gravity="left|center"
            android:hint="이름을 입력해 주세요"
            tools:ignore="InvalidId,MissingConstraints"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="415dp" />



        <TextView
            android:id="@+id/tel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tel"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tel"
                android:layout_width="238dp"
                android:layout_height="45dp"
                android:gravity="left|center"
                android:hint="전화번호를 입력해 주세요"
                tools:ignore="InvalidId,MissingConstraints"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="541dp" />


            <Button
                android:id="@+id/btnCheak2"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="인증 확인"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="289dp"
                tools:layout_editor_absoluteY="541dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/hometext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집 주소 설정"
            android:layout_marginTop="10dp"/>


        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/home"
            android:layout_width="325dp"
            android:layout_height="36dp"
            android:background="@drawable/border"
            android:gravity="left|center"
            android:hint="" />

        <com.google.android.gms.maps.MapView
            android:layout_marginTop="10dp"
            android:id="@+id/mapView"
            android:layout_width="325dp"
            android:layout_height="164dp" />

        <Button
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:text="주소 설정"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/button_state"
            android:stateListAnimator="@null"
            android:enabled="true"
            android:text="다음"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>
</ScrollView>

