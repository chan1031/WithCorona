<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="150dp"
            android:layout_height="46dp"
            android:background="@drawable/spinner_bg"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_month"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:layout_toRightOf="@+id/spinner_year"
            android:background="@drawable/spinner_bg"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_day"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:layout_toRightOf="@+id/spinner_month"
            android:background="@drawable/spinner_bg"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageHome"
                android:layout_width="70dp"
                android:layout_height="46dp"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/h" />

            <ImageView
                android:id="@+id/imageDot1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="15dp"
                app:srcCompat="@drawable/c" />

            <ImageView
                android:id="@+id/imageWalk"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/w" />

            <ImageView
                android:id="@+id/imageDot2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="15dp"
                app:srcCompat="@drawable/c" />

            <ImageView
                android:id="@+id/imagePing"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/ping" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borderb"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="30dp"
                    android:text="집"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textTime1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="오전 6:00 ~ 오전 8:31"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/textLocation1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="50dp"
                android:text="인천광역시 산곡동 한화아파트" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPosition2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="70dp"
                    android:text="이동"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:text="오전 8:42 ~ 오전 9:22"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPosition3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="60dp"
                    android:text="대학교"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textTime3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="오전 9:50 ~ 오후 10:03"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <TextView
                android:id="@+id/textLocation2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="60dp"
                android:text="인천광역시 산곡동 한화아파트" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ListBtn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="경로" />

        <Button
            android:id="@+id/MapBtn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:onClick="onClickMap"
            android:text="지도" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_weight="1">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/n" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ping" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/t" />
        </com.google.android.material.tabs.TabLayout>

    </LinearLayout>


</LinearLayout>